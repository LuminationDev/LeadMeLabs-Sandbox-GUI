<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net6.0-windows</TargetFramework>
        <RootNamespace>LeadMeLabs_Sandbox</RootNamespace>
		<UseWPF>true</UseWPF>
		<UseWindowsForms>true</UseWindowsForms>
		<Nullable>enable</Nullable>
		<ApplicationIcon>./assets/icon.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
	    <PackageReference Include="Microsoft.Toolkit.Mvvm" Version="7.0.0" />
	    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.31" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="leadme_api">
        <HintPath>..\..\.Net Standard 2.0\leadme_api\leadme_api\bin\Release\netstandard2.0\leadme_api.dll</HintPath>
      </Reference>
    </ItemGroup>

</Project>
